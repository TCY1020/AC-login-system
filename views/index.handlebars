<div class="container">
  <div class="mx-auto">
    <h1 class=" mt-3" style="text-align:center;">Account Login</h1>
  </div>
  <form action="/profile/check" method="post">
    <div class="mb-3">
      <input type="email" class="form-control" placeholder="Email" aria-describedby="emailHelp" name="email" required>
    </div>
    <div class="mb-3">
      <input type="password" class="form-control" placeholder="Password" name="password" required>
    </div>
    
    <p>{{wrong}}</p>
    
    <button  type="submit" class="btn btn-outline-info">Submit</button>
  </form>
</div>
